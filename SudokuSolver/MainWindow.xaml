<Window x:Class="SudokuSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SudokuSolver" Height="600" Width="600" Background="#66CCFF"
        MinHeight="500" MinWidth="450">
    <Grid Name="MainField">
        <Button Name="startButton" Grid.Row="10" Grid.ColumnSpan="3"
                Grid.Column="4" Height="30" Width="50"
                Click="startButton_Click">Start</Button>
        <Button Name="helpButton" Grid.Row="10" Grid.Column="6" Grid.ColumnSpan="3"
                Height="30" Width="50" Click="helpButton_Click">Help</Button>
        <Button Name="clearButton" Click="clearButton_Click" Grid.Row="10" Grid.Column="2"
                Grid.ColumnSpan="3" Height="30" Width="50">Clear</Button>
    </Grid>
</Window>
